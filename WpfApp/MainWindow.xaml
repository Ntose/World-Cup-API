<Window x:Class="WpfApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp"
        mc:Ignorable="d"
        Title="World Cup Viewer" Height="400" Width="600"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Row for Favorite Team ComboBox -->
            <RowDefinition Height="Auto"/>
            <!-- Row for Opponent Team ComboBox -->
            <RowDefinition Height="Auto"/>
            <!-- Row for Match Result TextBlock -->
            <RowDefinition Height="*"/>
            <!-- Flexible space, if any -->
        </Grid.RowDefinitions>

        <!-- Favorite Team Selection -->
        <StackPanel Grid.Row="0" Margin="0,0,0,15">
            <TextBlock Text="Favorite Team:" FontWeight="Bold" Margin="0,0,0,5"/>
            <ComboBox x:Name="FavoriteTeamComboBox" 
                      SelectionChanged="FavoriteTeamComboBox_SelectionChanged" 
                      DisplayMemberPath="Country"
                      ToolTip="Select your favorite team"/>
        </StackPanel>

        <!-- Opponent Team Selection -->
        <StackPanel Grid.Row="1" Margin="0,0,0,15">
            <TextBlock Text="Opponent Team:" FontWeight="Bold" Margin="0,0,0,5"/>
            <ComboBox x:Name="OpponentTeamComboBox" 
                      SelectionChanged="OpponentTeamComboBox_SelectionChanged" 
                      DisplayMemberPath="Country"
                      ToolTip="Select the opponent team"/>
        </StackPanel>

        <!-- Match Result Display -->
        <TextBlock Grid.Row="2" 
                   x:Name="MatchResultTextBlock" 
                   FontSize="18" 
                   FontWeight="Bold" 
                   TextAlignment="Center" 
                   VerticalAlignment="Center"
                   MinHeight="50"
                   TextWrapping="Wrap"/>
    </Grid>
</Window>
