<Window x:Class="WpfApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="National Team Overview" Height="350" Width="600">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Select Your Team:" FontWeight="Bold"/>
        <ComboBox x:Name="comboYourTeam" Grid.Row="0" Margin="150,0,0,10" Width="200"/>

        <TextBlock Grid.Row="1" Text="Select Opponent:" FontWeight="Bold"/>
        <ComboBox x:Name="comboOpponent" Grid.Row="1" Margin="150,0,0,10" Width="200"/>

        <TextBlock Grid.Row="2" Text="Result:" FontWeight="Bold"/>
        <TextBlock x:Name="txtResult" Grid.Row="2" Margin="150,0,0,10" FontSize="16" Foreground="DarkBlue"/>

        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
            <Button Content="Your Team Info" Width="120" Margin="10" Click="BtnYourTeamInfo_Click"/>
            <Button Content="Opponent Info" Width="120" Margin="10" Click="BtnOpponentInfo_Click"/>
        </StackPanel>
    </Grid>
</Window>
