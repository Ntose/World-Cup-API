<Window x:Class="WpfApp.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Initial Settings" Height="300" Width="400">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Margin="0,0,0,10">
            <TextBlock Text="Select Championship:"/>
            <ComboBox x:Name="ChampionshipComboBox">
                <ComboBoxItem Content="Men"/>
                <ComboBoxItem Content="Women"/>
            </ComboBox>
        </StackPanel>

        <StackPanel Grid.Row="1" Margin="0,0,0,10">
            <TextBlock Text="Select Language:"/>
            <ComboBox x:Name="LanguageComboBox">
                <ComboBoxItem Content="English"/>
                <ComboBoxItem Content="Croatian"/>
            </ComboBox>
        </StackPanel>

        <StackPanel Grid.Row="2" Margin="0,0,0,10">
            <TextBlock Text="Select Window Size:"/>
            <ComboBox x:Name="ResolutionComboBox">
                <ComboBoxItem Content="Fullscreen"/>
                <ComboBoxItem Content="1024x768"/>
                <ComboBoxItem Content="1280x720"/>
                <ComboBoxItem Content="1920x1080"/>
            </ComboBox>
        </StackPanel>

        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Confirm" Width="100" Margin="5" Click="Confirm_Click"/>
            <Button Content="Cancel" Width="100" Margin="5" Click="Cancel_Click"/>
        </StackPanel>
    </Grid>
</Window>
