<Window x:Class="WpfApp.ConfirmCloseWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Confirm Exit" Height="150" Width="300"
        WindowStartupLocation="CenterOwner"
        KeyDown="Window_KeyDown"
        WindowStyle="ToolWindow"
        ResizeMode="NoResize">
    <Grid Margin="10">
        <StackPanel VerticalAlignment="Center">
            <TextBlock Text="Do you really want to exit?" 
                        HorizontalAlignment="Center" 
                        TextWrapping="Wrap" 
                        Margin="0,10,0,10"/>
            <TextBlock Text="(Press Enter to confirm, Esc to cancel)" 
                        HorizontalAlignment="Center" 
                        FontSize="10"
                        FontStyle="Italic"/>
        </StackPanel>
    </Grid>
</Window>
