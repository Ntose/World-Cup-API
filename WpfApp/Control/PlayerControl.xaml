<UserControl x:Class="WpfApp.PlayerControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Width="100" Height="100">
    <Border BorderBrush="Black" BorderThickness="1" Padding="5" MinHeight="100" MinWidth="100">
        <StackPanel>
            <Image x:Name="PlayerImage" Width="60" Height="60" />
            <TextBlock x:Name="PlayerName" Text="Name" TextAlignment="Center"/>
            <TextBlock x:Name="PlayerNumber" Text="#0" TextAlignment="Center"/>
        </StackPanel>
    </Border>
</UserControl>
