<Window x:Class="WpfApp.StartupSettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Startup Settings"
        Height="300" Width="400"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen">

    <StackPanel Margin="20" VerticalAlignment="Center">

        <TextBlock Text="Choose Language:" FontWeight="Bold"/>
        <ComboBox x:Name="comboLanguage" Margin="0,5" SelectedIndex="0">
            <ComboBoxItem Content="English"/>
            <ComboBoxItem Content="Croatian"/>
        </ComboBox>

        <TextBlock Text="Choose Tournament:" Margin="10,10,0,0" FontWeight="Bold"/>
        <ComboBox x:Name="comboTournament" Margin="0,5" SelectedIndex="0">
            <ComboBoxItem Content="Men"/>
            <ComboBoxItem Content="Women"/>
        </ComboBox>

        <TextBlock Text="Select Display Mode:" Margin="10,10,0,0" FontWeight="Bold"/>
        <ComboBox x:Name="comboResolution" Margin="0,5" SelectedIndex="1">
            <ComboBoxItem Content="Fullscreen"/>
            <ComboBoxItem Content="1280 x 720"/>
            <ComboBoxItem Content="1600 x 900"/>
            <ComboBoxItem Content="1920 x 1080"/>
        </ComboBox>

        <Button Content="Confirm"
                Height="35"
                Width="100"
                Margin="0,20,0,0"
                HorizontalAlignment="Center"
                Click="Confirm_Click"/>
    </StackPanel>
</Window>
